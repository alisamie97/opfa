{{ header }}
<div id="common-success" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      {% if heading_title %}<h1>{{ heading_title }}</h1>{% endif %}
	  {% if error_warning %}
	  <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
	  {% endif %}
	  {% if not error_warning %}
      <div class="row">
          <table class="table table-bordered">
            <tr>
              <td class="text-left">{{ text_orderId }}</td>
              <td class="text-left">{{ orderId }}</td>
            </tr>
            <tr>
              <td class="text-left">{{ text_pay_result }}</td>
              <td class="text-left">{{ pay_result }}</td>
            </tr>
            <tr>
              <td class="text-left">{{ text_tran_trace_no }}</td>
              <td class="text-left">{{ tran_trace_no }}</td>
            </tr>
          </table>
      </div>
	  {% endif %}
      <div class="buttons">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }} 